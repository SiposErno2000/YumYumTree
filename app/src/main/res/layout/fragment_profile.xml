<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.ProfileFragment">

    <ImageView
        android:src="@drawable/avatar"
        android:id="@+id/profilePicture"
        android:layout_width="@dimen/medium_size"
        android:layout_height="@dimen/medium_size"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:src="@drawable/profile"
        android:id="@+id/profileIcon"
        android:layout_width="@dimen/very_small_size"
        android:layout_height="@dimen/very_small_size"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@id/profilePicture"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/fullname_profile_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_null"
        app:layout_constraintTop_toTopOf="@id/profileIcon"
        app:layout_constraintLeft_toRightOf="@id/profileIcon"
        android:hint="Full Name" />

    <TextView
        android:id="@+id/fullname_profile"
        android:layout_width="@dimen/large_size"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintLeft_toRightOf="@id/profileIcon"
        app:layout_constraintTop_toBottomOf="@id/fullname_profile_textView" />

    <ImageView
        android:src="@drawable/email"
        android:id="@+id/emailIcon"
        android:layout_width="@dimen/very_small_size"
        android:layout_height="@dimen/very_small_size"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@id/fullname_profile"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/email_profile_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_null"
        app:layout_constraintTop_toTopOf="@id/emailIcon"
        app:layout_constraintLeft_toRightOf="@id/emailIcon"
        android:hint="Email" />

    <TextView
        android:id="@+id/email_profile"
        android:layout_width="@dimen/large_size"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintLeft_toRightOf="@id/emailIcon"
        app:layout_constraintTop_toBottomOf="@id/email_profile_textView" />

    <ImageView
        android:src="@drawable/phone"
        android:id="@+id/phoneIcon"
        android:layout_width="@dimen/very_small_size"
        android:layout_height="@dimen/very_small_size"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@id/email_profile"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/phone_profile_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_null"
        app:layout_constraintTop_toTopOf="@id/phoneIcon"
        app:layout_constraintLeft_toRightOf="@id/phoneIcon"
        android:hint="Phone No." />

    <TextView
        android:id="@+id/phone_profile"
        android:layout_width="@dimen/large_size"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintLeft_toRightOf="@id/phoneIcon"
        app:layout_constraintTop_toBottomOf="@id/phone_profile_textView" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large"
        android:text="@string/logout_button_text"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#000000"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/change_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_extra_small"
        android:text="@string/change_password"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#000000"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/logout_button" />

</androidx.constraintlayout.widget.ConstraintLayout>